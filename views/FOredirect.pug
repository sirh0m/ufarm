      table.table
        thead
          tr
            th(scope='col') #
            th(scope='col') Name
            th(scope='col') Gender
            th(scope='col') Ward
            th(scope='col') Activities Undertaken
        tbody
          tr
            th(scope='row') 1
            td fun
            td Male
            td Cell 02
            td Uploads produce
          tr
            th(scope='row') 2
            td heck
            td Male
            td Cell 02
            td Uploads produce
          tr
            th(scope='row') 3
            td jade
            td Male
            td Cell 04
            td Uploads produce
    #v-pills-profile.tab-pane.fade(role='tabpanel' aria-labelledby='v-pills-profile-tab' tabindex='0')
      .row
        .col.px-5
          h3 Ghee
          img(src='/images/ghee.jpg' alt='')
        .col.px-5
