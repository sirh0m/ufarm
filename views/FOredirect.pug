        </div>
        <div class="mt-3 col-4">
        <li class="list-group-item"><h4>Casein</h4> </li>
        </div>
        </div>
        </ul>
    #v-pills-disabled.tab-pane.fade(role='tabpanel' aria-labelledby='v-pills-disabled-tab' tabindex='0')
        form(action='/farmerone' method="post")
              .row
                .mt-2.col-3
                  label(for='username') Name
                  input#name.form-control(type='name' placeholder='username' name='fullname')
                .mt-2.col-3
                  label(for='gender') Gender
                  select#cars.form-control(name='gender')
                    option(value='male') Male
                    option(value='Female') Female
                .mt-2.col-3
                  label(for='dateofbirth') Date of Birth
                  input#date.form-control(type='date' name='dateofbirth')
                .mt-2.col-3
                  label(for='dateofRegistration') Date of Registration
                  input#date.form-control(type='date' name='dateofRegistration')
                .mt-2.col-3
                  label(for='activitiesUndertaken') Activities Undertaken
                  input.form-control(type='string' id='activitiesUndertaken' name='activitiesUndertaken')
                .mt-2.col-3
                  label(for='ward') Ward:
                  select.form-control(input='' type='String' id='ward' name='ward')
                    option(value='Cell 01') Cell 01
                    option(value='Cell 02') Cell 02
                    option(value='Cell 03') Cell 03
                    option(value='Cell 04') Cell 04
                .mt-2.col-3
                  label(for='nin') NIN
                  input#Direction.form-control(type='string' name='nin')
                .mt-2.col-3
                  label(for='password') Password:
                  input#pwd.form-control(type='password' placeholder='Enter password' name='password')
                .mt-2.col-3
                  label(for='Unique ID') Unique ID
                  input.form-control(type='string' id='userid' name='userid')
                .mt-2.col-3
                  label(for='contact') Contact
                  input.form-control(type='Number' id='contact' name='contact')
                .mt-2.col-3
                  label(for='role') Role
                  select#cars.form-control(name='role')
                    option(value='User') User
                    option(value='Urban Farmer') Urban Farmer
              .button
                button.btn.btn-primary(type='register') Register
