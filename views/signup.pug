doctype html
head
  title Signup
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css' rel='stylesheet')
  script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js')
  link(rel='stylesheet' href='css/signup.css')
nav.navbar.navbar-expand-lg.navbar-light.bg-light(style='position: absolute; top: 0px; width: 100%;')
  .container-fluid
    a.navbar-brand(href='#') UFARM
    button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle navigation')
      span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      ul.navbar-nav.me-auto.mb-2.mb-lg-0
        li.nav-item
          a.nav-link.active(aria-current='page' href='#') Home
        li.nav-item
          a.nav-link(href='#') About us
        li.nav-item.dropdown
          a#navbarDropdown.nav-link.dropdown-toggle(href='#' role='button' data-bs-toggle='dropdown' aria-expanded='false')
            | Accounts
          ul.dropdown-menu(aria-labelledby='navbarDropdown')
            li
              a.dropdown-item(href='#') Login
            li
              a.dropdown-item(href='#') SignUp
        li.nav-item
          a.nav-link.Products(href='#' tabindex='-1' aria-products='true') Products
div(style='margin-bottom: 5%;')
.container.mt-3
  h2.text-center
    | Signup 
  form(action='/Register' method="post")
    .row
      .mt-2.col-3
        label(for='username') Name:
        input#name.form-control(type='text' placeholder='Enter name' name='username')
      .mt-2.col-3
        label(for='gender') Gender:
        select#cars.form-control(name='gender')
          option(value='male') Male
          option(value='Female') Female
      .mt-2.col-3
        label(for='dateofRegistration') Date of Registration:
        input#date.form-control(type='date' name='dateofRegistration')
      .mt-2.col-3
        label(for='dateofbirth') Date of Birth:
        input#date.form-control(type='date' name='dateofbirth')
      .mt-2.col-3
        label(for='activitiesUndertaken') Activities Undertaken:
        select.form-control(input='' type='String' id='activitiesUndertaken' name='activitiesUndertaken')
          option(value='Inspects produce') Inspects &amp; approves produce
          option(value='Approves the produce') Registers urban farmers
          option(value='Sees all bookings and orders') Sees all bookings and orders
      .mt-2.col-3
        label(for='Contact') Contact:
        input#phone.form-control(type='Number' name='contact')
      .mt-2.col-3
        label(for='nin') NIN:
        input#NIN.form-control(type='String' name='nin')
      .mt-2.col-3
        label(for='password') Password:
        input#pwd.form-control(type='password' placeholder='Enter password' name='password')
      .mt-2.col-3
        label(for='ward') Ward:
        select.form-control(input='' type='String' id='String' name='ward')
          option(value='Cell 01') Cell 01
          option(value='Cell 02') Cell 02
          option(value='Cell 03') Cell 03
          option(value='Cell 04') Cell 04
      .mt-2.col-3
        label(for='Roles') Role:
        select#Roles.form-control(input='' type='String' name='role')
          option(value='User') User
          option(value='Agric Officer') Agric Officer
      .mt-2.col-3
        label(for='userid') USER ID:
        input.form-control(type='String' id='String' name='userid')
    .button
      button.btn.btn-secondary(type='submit') Submit
